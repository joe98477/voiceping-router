# Core
ENV_FILE=.env
NODE_ENV=production
PORT=3000
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=
REDIS_PORT=6379
LEGACY_JOIN_ENABLED=false
SECRET_KEY=change-me
ROUTER_JWT_SECRET=change-me
SESSION_SECRET=change-me
SESSION_COOKIE_SECURE=true
TRUST_PROXY=true

# Control-plane / web UI
WEB_BASE_URL=https://dispatch.example.com
VITE_API_BASE=https://api.example.com

# Postgres (control-plane)
POSTGRES_USER=voiceping
POSTGRES_PASSWORD=change-me
POSTGRES_DB=voiceping
DATABASE_URL=postgres://voiceping:change-me@postgres:5432/voiceping

# SMTP (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=no-reply@voiceping.local

# Bootstrap admin (optional, only on first start)
BOOTSTRAP_ADMIN_EMAIL=admin@example.com
BOOTSTRAP_ADMIN_PASSWORD=change-me
