ENV_FILE=.env.test
NODE_ENV=development
PORT=3000
REDIS_HOST=redis
REDIS_PASSWORD=
REDIS_PORT=6379
LEGACY_JOIN_ENABLED=false
SECRET_KEY=change-me
ROUTER_JWT_SECRET=change-me
SESSION_SECRET=change-me
SESSION_COOKIE_SECURE=false
TRUST_PROXY=false

# Set WEB_BASE_URL to your server's LAN IP for cross-machine access
# Example: http://192.168.100.147:8080
WEB_BASE_URL=http://localhost:8080
VITE_API_BASE=
VITE_STARTUP_STATUS=true
# Leave empty for Docker (auto-derives from browser location via nginx proxy)
# Set to ws://localhost:3000 only for local Vite dev server
VITE_ROUTER_WS=

POSTGRES_USER=voiceping
POSTGRES_PASSWORD=voiceping
POSTGRES_DB=voiceping
DATABASE_URL=postgres://voiceping:voiceping@postgres:5432/voiceping

SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=no-reply@voiceping.local

BOOTSTRAP_ADMIN_EMAIL=admin@example.com
BOOTSTRAP_ADMIN_PASSWORD=change-me

TEST_SEED_ENABLED=true
TEST_SEED_EVENT_NAME=VoicePing Test Event
TEST_SEED_TEAM_NAME=Test Team
TEST_SEED_CHANNEL_NAME=Test Channel
DEBUG=vp:*

# mediasoup WebRTC â€” set ANNOUNCED_IP to your server's LAN IP for cross-machine access
# Example: MEDIASOUP_ANNOUNCED_IP=192.168.100.147
MEDIASOUP_ANNOUNCED_IP=
MEDIASOUP_LISTEN_IP=0.0.0.0
# Port range: 100 ports supports ~50 concurrent users (2 ports per user)
# Increase for production (max 49999)
MEDIASOUP_MIN_PORT=40000
MEDIASOUP_MAX_PORT=40099
